{{!-- <div class="col-lg-8"> --}}
    <div class="courses_container">
        <div class="row courses_row">
            <!-- Course -->
            <div class="col-lg-12 course_col" style="padding: 0px 0px 0px 15px">
                <div class="course">
                    <div class="card text-center card-product">
                        <div class="course_image card-product__img"><img src="{{Product.imagepath}}" alt="">
                            <ul class="card-product__imgOverlay">
                                <li><button onclick="location.href='/products/{{Product.id}}'"><i class="ti-search"></i></button></li>
                                <li><button class="add-to-cart" data-id="{{Product.id}}"><i class="ti-shopping-cart"></i></button></li>
                                <li><button class="add-to-watchlist" data-id="{{Product.id}}"><i class="ti-heart" ></i></button></li>
                                
                            </ul>
                        </div>
                    </div>
                    <div class="course_body">
                        <h3 class="course_title cat"><a href="/products/{{Product.id}}">{{Product.name}}</a></h3>
                        <div class="course_teacher">{{Product.Teacher.fullname}}</div>
                        <div class="course_text">
                            <p class="shortcut">{{Product.Topic.name}}</p>
                        </div>
                    </div>
                    <div class="course_footer">
                        <div class="course_footer_content d-flex flex-row align-items-center justify-content-start">
                            <div class="course_info">
                                <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                                <span>{{dataValues.like_count}} Student</span>
                            </div>
                            <div class="course_info">
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <span>{{Product.overallreview}} Ratings</span>
                            </div>
                            <div class="course_price ml-auto">${{Product.price}} <b>${{Product.promotion}}</b></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
