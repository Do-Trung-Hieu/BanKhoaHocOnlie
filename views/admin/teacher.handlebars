<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add Teacher</h4>
                    </div>
                    <div class="card-body">
                        <form name="AddTeacherForm"  onsubmit = "return validateForm()" method="post" action="/admin/teacher" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 px-1">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" class="form-control" id= "email" name="email" placeholder="Email" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" id="password" name="password"class="form-control" placeholder="Password" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label>Full Name</label>
                                        <input type="text" id="hoten" name="hoten" class="form-control" placeholder="Họ và Tên" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label>Specialize</label>
                                        <input type="text" id="chuyenmon" name="chuyenmon" class="form-control" placeholder="Chuyên môn" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    <input type="file" name="image" class="input-group input-file" />
                                </div>
                            </div>

                            <button type="submit" class="btn btn-info btn-fill pull-left">Add</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
	function validateForm(){
		var x = document.forms["AddTeacherForm"]["email"].value;
		var y = document.forms["AddTeacherForm"]["password"].value;
		var z = document.forms["AddTeacherForm"]["hoten"].value;
		var t = document.forms["AddTeacherForm"]["chuyenmon"].value;

		if(x == "" || y == "" || z == "" || t == ""){
			alert("Vui lòng điền đầy đủ thông tin !");
			return false;
		}
		else if(y.length < 3){
			alert("Mật khẩu không được ít hơn 3 ký tự !");
			return false;
		}
		else{
			return true;
		}
	}
</script>